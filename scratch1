<script>
const fontFile = document.getElementById("fontFile");
const statusText = document.getElementById("status");

document.getElementById("createSprite").onclick = () => {
    if (!fontFile.files.length) {
        statusText.innerText = "Please upload a font first!";
        statusText.style.color = "red";
    } else {
        statusText.innerText = "Creating new sprite from " + fontFile.files[0].name + "...";
        statusText.style.color = "green";
    }
};

document.getElementById("modifySprite").onclick = () => {
    if (!fontFile.files.length) {
        statusText.innerText = "Please upload a font first!";
        statusText.style.color = "red";
    } else {
        statusText.innerText = "Modifying sprite with " + fontFile.files[0].name + "...";
        statusText.style.color = "green";
    }
};
</script>

